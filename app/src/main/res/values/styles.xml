<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/darkBlue</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/gradient_bg</item>
        <item name="android:windowContentTransitions">false</item>
        <item name="android:windowDisablePreview">true</item>
    </style>


    <style name="LoadingTheme" parent="@android:style/Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@drawable/gradient_bg</item>
    </style>

    <style name="transparentBG" parent="AppTheme">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="series_title">

        <item name="android:textSize">17sp</item>

        <item name="android:letterSpacing">
            0.02
        </item>

        <item name="android:textColor">
            #FFFFFF
        </item>

    </style>

    <style name="episode_title">

        <item name="android:textSize">
            17sp
        </item>

        <item name="android:letterSpacing">
            0.02
        </item>

        <item name="android:textColor">
            @color/whiteM
        </item>

    </style>

    <style name="series_header">

        <item name="android:textSize">
            20sp
        </item>

        <item name="android:letterSpacing">
            0.01
        </item>

        <item name="android:textColor">
            @color/whiteM
        </item>

    </style>

    <style name="series_sub_header">

        <item name="android:textSize">
            16sp
        </item>

        <item name="android:letterSpacing">
            0.01
        </item>

        <item name="android:textColor">
            @color/greylighterM
        </item>

    </style>

    <style name="new_episode_header">

        <item name="android:textSize">
            20sp
        </item>

        <item name="android:letterSpacing">
            0.02
        </item>

        <item name="android:textColor">
            @color/greylighterM
        </item>

        <item name="android:textAlignment">
            textStart
        </item>

    </style>

    <style name="series_sub_title">

        <item name="android:textSize">
            13sp
        </item>

        <item name="android:letterSpacing">
            0.08
        </item>

        <item name="android:textColor">
            @color/greylighterM
        </item>
    </style>

    <style name="episode_sub_title">

        <item name="android:textSize">
            13sp
        </item>

        <item name="android:letterSpacing">
            0.08
        </item>

        <item name="android:textColor">
            @color/greylighterM
        </item>
    </style>

    <style name="channel_title">

        <item name="android:textSize">
            20sp
        </item>

        <item name="android:letterSpacing">
            0.01
        </item>

        <item name="android:textColor">
            @color/whiteM
        </item>

        <item name="android:fontFamily">
            @font/gilroybold
        </item>

    </style>

    <style name="channel_sub_title">

        <item name="android:textSize">
            16sp
        </item>

        <item name="android:letterSpacing">
            0.01
        </item>

        <item name="android:textColor">
            @color/greylighterM
        </item>

        <item name="android:fontFamily">
            @font/gilroyregular
        </item>

    </style>

    <style name="channel_header">

        <item name="android:textSize">
            30sp
        </item>

        <item name="android:letterSpacing">
            0.01
        </item>

        <item name="android:textColor">
            #C1C1C1
        </item>

    </style>

    <style name="category_title">

        <item name="android:textSize">
            18sp
        </item>

        <item name="android:letterSpacing">
            0.01
        </item>

        <item name="fontFamily">
            @font/gilroybold
        </item>

        <item name="android:textColor">
            @color/whiteM
        </item>

    </style>

    <style name="ShapeAppearance.App.CircleImageView" parent="Theme.MaterialComponents">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">48%</item>
        <item name="android:textColor">@color/whiteM</item>
        <item name="colorOnPrimary">@android:color/holo_red_light</item>
        <item name="colorPrimary">@android:color/holo_orange_dark</item>
        <item name="colorOnSurface">@android:color/holo_orange_light</item>
    </style>



</resources>
